---
const { description } = Astro.props;

const splitDescription = description.split(".");
---

<h5 class="font-bold text-2xl">Información del producto</h5>
<article class="my-2">
  <div class="my-3 border-b-[1px] border-primary">
    <h6 class="font-bold text-lg uppercase text-gray-600">Descripción</h6>
  </div>
  <div>
    {
      splitDescription.map((p:string) => (
      <p class="mb-1 text-gray-600">
        {p}.
      </p>
      ))
    }
  </div>
</article>