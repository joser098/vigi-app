---
const { details } = Astro.props;
---

<article class="grid grid-cols-1 sm:grid-cols-2 gap-5">
  <div>
    <table>
      <h4>General</h4>
      {
        Object.entries(details).map(([key, value], index) => (
          <tr>
            <td>{key}</td>
            <td>{value}</td>
          </tr>
        ))
      }
    </table>
  </div>
  <div></div>
</article>

<style>
  h4 {
    font-size: medium;
    margin-bottom: 8px;
    font-weight: bold;
  }
  td {
    padding: 1rem;
    font-size: small;
  }

  table {
    width: 100%;
  }

  td {
    width: 70%;
  }

  td:first-child {
    font-weight: bold;
  }
  tr:nth-child(odd) {
    background-color: #f9f9f9;
  }
  tr:nth-child(even) {
    background-color: #f3f3f3;
  }
</style>