---
import { type Product } from "../services/types";
import Badges from "./Badges.astro";

interface Props {
  product: Product;
}

const { product } = Astro.props;
---

  <a href=`/product/${product.model}` class="transition-transform duration-500 hover:scale-105">
    <article class="flex flex-col justify-evenly p-3 rounded bg-white shadow-md hover:shadow-lg w-60 h-96">
      <img class="max-w-52 min-h-48 object-cover mb-4" src={product.thumbnail} alt={product.model} />
      <div class="px-4">
        {product.has_promotion && (
          <span class="text-green-600 text-xs mb-3">Oferta</span>
        )}
        <h2 class="mb-2 font-bold">{product.model}</h2>
        <p>
          {product.price.toLocaleString("es-AR", {
            style: "currency",
            currency: "ARS",
            minimumFractionDigits: 0,
          })}
        </p>
        <Badges product={product}/>
      </div>
    </article>
  </a>

