{
  product.category == "alarmas" && <Details details={product.alarm_details}/>
}
{
  product.category == "almacenamiento" && <Details details={product.storage_details}/>
}

<style>
  h4 {
    font-size: medium;
    margin-bottom: 8px;
    font-weight: bold;
  }
  td {
    padding: 1rem;
    font-size: small;
  }

  table {
    width: 100%;
  }

  td {
    width: 70%;
  }

  td:first-child {
    font-weight: bold;
  }
  tr:nth-child(odd) {
    background-color: #f9f9f9;
  }
  tr:nth-child(even) {
    background-color: #f3f3f3;
  }
</style>
